{{>navbar}}
<div class="container">
    <div class="edit">
        <h2>Update your account information</h1>
        <form action="/profile/edit" method="POST" enctype="multipart/form-data">

            <label for="image-input">Image:</label>
            <input type="file" name="image" id="image-input" class="form-control-file" />
            <input type="text" name="existingImage" hidden id="" value="{{userFromDB.profilePicture}}">
            
            <input class="input-auth" type="text" name="firstName" id="firstName" value="{{userFromDB.firstName}}" required/>

            <input class="input-auth" type="text" name="lastName"  id="lastName" value="{{userFromDB.lastName}}" required/>

            <input class="input-auth" type="email" name="email" id="email" value="{{userFromDB.email}}" required/>
        </br>
        <h2>Update your preferences</h1>
            <input type="checkbox" id="technology" name="preferences" value="Technology" {{#ifInPreferences 'Technology' userFromDB.preferences }} checked {{/ifInPreferences}}>
            <label class="preferences-label" for="technology">Technology</label>

            </br>

            <input type="checkbox" id="business" name="preferences" value="Business" {{#ifInPreferences 'Business' userFromDB.preferences }} checked {{/ifInPreferences}}>
            <label class="preferences-label" for="business">Business</label>

            </br>

            <input type="checkbox" id="games" name="preferences" value="Games" {{#ifInPreferences 'Games' userFromDB.preferences }} checked {{/ifInPreferences}}>
            <label class="preferences-label" for="games">Games</label>

            </br>

            <input type="checkbox" id="science" name="preferences" value="Science" {{#ifInPreferences 'Science' userFromDB.preferences }} checked {{/ifInPreferences}}>
            <label class="preferences-label" for="science">Science</label>

            </br>

            <input type="checkbox" id="sports" name="preferences" value="Sports" {{#ifInPreferences 'Sports' userFromDB.preferences }} checked {{/ifInPreferences}}>
            <label class="preferences-label" for="sports">Sports</label>

            </br>
            </br>

            <button class="button mg" type="submit">Save changes</button>
            {{#if errorMessage}}
               <p class="error">{{errorMessage}}</p>
            {{/if}}
        </form>
    </div>
</div> <!-- /container -->